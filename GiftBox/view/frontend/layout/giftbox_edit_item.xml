<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="BroSolutions_GiftBox::css/giftbox.css"/>
<!--        <script src="BroSolutions_GiftBox::js/giftbox.js"/>-->
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Edit GiftBox</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="BroSolutions\GiftBox\Block\Product\ListProduct" name="brosolutions.giftbox.block.product.listproduct" template="BroSolutions_GiftBox::products.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
